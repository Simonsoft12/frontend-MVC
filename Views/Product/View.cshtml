@model IEnumerable<FrontendMVC.Models.Product>
@using System.Linq;

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Katalog Produktów</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/styles.css" rel="stylesheet">
</head>

<body class="bg-light text-dark">
    <nav>
        <div class="wrapper">
            <div class="logo"><a href="#">Katalog Produktów</a></div>
            <input type="radio" name="slider" id="menu-btn">
            <input type="radio" name="slider" id="close-btn">
            <ul class="nav-links">
                <li><a href="@Url.Action("ViewProducts", "Product")">Produkty</a></li>
                <li><a href="@Url.Action("AddForm", "Product")" class="btn-grad">Dodaj produkt</a></li>
            </ul>
            <label for="menu-btn" class="btn menu-btn mbo"><i class="fas fa-bars"></i></label>
        </div>
    </nav>

    <div class="container margTop">
        <h2 class="text-center">Lista produktów</h2>
        <table class="w-100">
            <thead>
                <tr>
                    <th class="customTab">ID</th>
                    <th class="customTab">Kod</th>
                    <th class="customTab">Nazwa</th>
                    <th class="customTab">Cena</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.Id</td>
                            <td>@product.Code</td>
                            <td>@product.Name</td>
                            <td>@product.Price.ToString("F2") zł</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>


    <footer>
        <p>&copy; 2025 Katalog Produktów</p>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
